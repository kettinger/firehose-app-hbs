<% @pics.each_slice(3) do |slice| %>
	<div class="row">
		<%slice.each do |pic| %>
			<div class="smurfy span4 text-center">
				<h1 class="custom-h1b">
					Title: <%= pic.title %>
				</h1>
				<%= image_tag pic.image %>
				<h2 class="custom-h2">
				Caption: <%= pic.subtitle %>
				</h2>
				<h2 class="custom-h2">
				Description: <%= pic.message %>
				</h2>
			</div>

		<%end %>
	</div>
	<br />
<% end %>